using System;
using System.Collections.Generic;
using System.Drawing;
using System.Drawing.Drawing2D;
using System.Windows.Forms;

namespace AlgortimoCurvas
{
    public partial class frmCurvaBezier : Form
    {
        private List<PointF> controlPoints = new List<PointF>();
        private List<PointF> curvePoints = new List<PointF>();
        private int selectedPointIndex = -1;
        private bool isDragging = false;
        private bool addPointMode = false;
        private int defaultSamples = 200;

        // Zoom and pan
        private float zoom = 1.0f;
        private PointF pan = new PointF(0f, 0f);
        private bool isPanning = false;
        private Point panStart;
        private PointF panStartValue;

        public frmCurvaBezier()
        {
            InitializeComponent();
            btnAddPoint.Text = "Nuevo punto";

            cmbExamples.Items.Add("Ejemplo A: Simple");
            cmbExamples.Items.Add("Ejemplo B: Curva en S");
            cmbExamples.Items.Add("Ejemplo C: Arco");
            cmbExamples.SelectedIndex = 0;

            txtInfo.Text = "Bezier (De Casteljau)\r\n\r\nDescripción técnica:\r\nImplementación del algoritmo De Casteljau para evaluar curvas Bezier.\r\nEl algoritmo interpola linealmente entre puntos de control de forma recursiva hasta obtener el punto en t.\r\n\r\nCasos de uso en la aplicación:\r\n- Presets para ver comportamiento con distintos conjuntos de puntos de control.\r\n- Añadir/arrastrar/eliminar puntos para observar la actualización en tiempo real.";

            picCanvas.MouseEnter += (s, e) => picCanvas.Focus();
        }

        protected override void OnMouseWheel(MouseEventArgs e)
        {
            base.OnMouseWheel(e);
            var client = this.PointToClient(Cursor.Position);
            if (picCanvas.Bounds.Contains(client))
            {
                HandleMouseWheel(new MouseEventArgs(e.Button, e.Clicks, client.X - picCanvas.Left, client.Y - picCanvas.Top, e.Delta));
            }
        }

        private void HandleMouseWheel(MouseEventArgs e)
        {
            float delta = e.Delta > 0 ? 1.1f : 0.9f;
            PointF mouse = new PointF(e.X, e.Y);
            PointF worldBefore = ScreenToWorld(mouse);
            zoom *= delta;
            if (zoom < 0.1f) zoom = 0.1f;
            if (zoom > 50f) zoom = 50f;
            pan = new PointF(mouse.X - worldBefore.X * zoom, mouse.Y - worldBefore.Y * zoom);
            RecalcularCurva();
        }

        private Matrix GetWorldToScreenMatrix()
        {
            var m = new Matrix(zoom, 0f, 0f, zoom, pan.X, pan.Y);
            return m;
        }

        private PointF ScreenToWorld(PointF screenPt)
        {
            var m = GetWorldToScreenMatrix();
            var inv = m.Clone();
            inv.Invert();
            PointF[] pts = new PointF[] { screenPt };
            inv.TransformPoints(pts);
            inv.Dispose();
            m.Dispose();
            return pts[0];
        }

        private PointF WorldToScreen(PointF worldPt)
        {
            var m = GetWorldToScreenMatrix();
            PointF[] pts = new PointF[] { worldPt };
            m.TransformPoints(pts);
            m.Dispose();
            return pts[0];
        }

        private void RecalcularCurva()
        {
            if (controlPoints.Count >= 2)
            {
                int samples = defaultSamples;
                curvePoints = CCurva.EvaluarBezier(controlPoints, samples);
            }
            else
            {
                curvePoints.Clear();
            }
            picCanvas.Invalidate();
        }

        private void picCanvas_MouseDown(object sender, MouseEventArgs e)
        {
            if (e.Button == MouseButtons.Middle)
            {
                isPanning = true;
                panStart = e.Location;
                panStartValue = pan;
                return;
            }

            if (e.Button == MouseButtons.Left)
            {
                PointF worldClick = ScreenToWorld(e.Location);

                if (addPointMode)
                {
                    int insertIndex = FindBestInsertIndex(worldClick);
                    if (insertIndex < 0) insertIndex = controlPoints.Count;
                    controlPoints.Insert(insertIndex, worldClick);
                    selectedPointIndex = insertIndex;
                    isDragging = true;
                    RecalcularCurva();
                    return;
                }

                int idx = GetPointAt(worldClick);
                if (idx >= 0)
                {
                    selectedPointIndex = idx;
                    isDragging = true;
                }
            }
            else if (e.Button == MouseButtons.Right)
            {
                PointF worldClick = ScreenToWorld(e.Location);
                int idx = GetPointAt(worldClick);
                if (idx >= 0)
                {
                    controlPoints.RemoveAt(idx);
                    selectedPointIndex = -1;
                    RecalcularCurva();
                }
            }
        }

        private void picCanvas_MouseMove(object sender, MouseEventArgs e)
        {
            if (isPanning)
            {
                int dx = e.X - panStart.X;
                int dy = e.Y - panStart.Y;
                pan = new PointF(panStartValue.X + dx, panStartValue.Y + dy);
                picCanvas.Invalidate();
                return;
            }

            if (isDragging && selectedPointIndex >= 0 && selectedPointIndex < controlPoints.Count)
            {
                PointF world = ScreenToWorld(e.Location);
                controlPoints[selectedPointIndex] = world;
                RecalcularCurva();
            }
        }

        private void picCanvas_MouseUp(object sender, MouseEventArgs e)
        {
            if (isPanning && e.Button == MouseButtons.Middle)
            {
                isPanning = false;
                return;
            }

            if (isDragging)
            {
                isDragging = false;
                selectedPointIndex = -1;
                RecalcularCurva();
            }
        }

        private int GetPointAt(PointF worldLocation)
        {
            const int hitRadiusScreen = 8;
            float hitRadiusWorld = hitRadiusScreen / zoom;
            int idx = -1;
            double bestDist = double.MaxValue;
            for (int i = 0; i < controlPoints.Count; i++)
            {
                double dx = controlPoints[i].X - worldLocation.X;
                double dy = controlPoints[i].Y - worldLocation.Y;
                double d = dx * dx + dy * dy;
                if (d <= hitRadiusWorld * hitRadiusWorld && d < bestDist)
                {
                    bestDist = d;
                    idx = i;
                }
            }
            return idx;
        }

        private int FindBestInsertIndex(PointF point)
        {
            if (controlPoints.Count < 2) return controlPoints.Count;
            double bestDist = double.MaxValue;
            int bestIndex = -1;
            for (int i = 0; i < controlPoints.Count - 1; i++)
            {
                var a = controlPoints[i];
                var b = controlPoints[i + 1];
                var proj = ProjectPointOnSegment(point, a, b);
                double dx = proj.X - point.X;
                double dy = proj.Y - point.Y;
                double d = dx * dx + dy * dy;
                if (d < bestDist)
                {
                    bestDist = d;
                    bestIndex = i + 1;
                }
            }
            return bestIndex;
        }

        private PointF ProjectPointOnSegment(PointF p, PointF a, PointF b)
        {
            float vx = b.X - a.X;
            float vy = b.Y - a.Y;
            float wx = p.X - a.X;
            float wy = p.Y - a.Y;
            float denom = vx * vx + vy * vy;
            if (denom == 0) return a;
            float t = (vx * wx + vy * wy) / denom;
            t = Math.Max(0f, Math.Min(1f, t));
            return new PointF(a.X + t * vx, a.Y + t * vy);
        }

        private void picCanvas_Paint(object sender, PaintEventArgs e)
        {
            var g = e.Graphics;
            g.SmoothingMode = SmoothingMode.AntiAlias;

            using (var m = GetWorldToScreenMatrix())
            {
                g.Transform = m;

                // draw control polygon and curve in world coords (transformed)
                if (controlPoints.Count >= 2)
                {
                    g.DrawLines(Pens.Gray, controlPoints.ToArray());
                }
                if (curvePoints != null && curvePoints.Count > 1)
                {
                    g.DrawLines(Pens.Green, curvePoints.ToArray());
                }

                // reset transform to draw fixed-size handles
                g.ResetTransform();

                // draw control point handles in screen coords
                for (int i = 0; i < controlPoints.Count; i++)
                {
                    var screenPt = WorldToScreen(controlPoints[i]);
                    var rect = new RectangleF(screenPt.X - 5, screenPt.Y - 5, 10, 10);
                    g.FillEllipse(Brushes.Blue, rect);
                    g.DrawEllipse(Pens.Black, rect);
                }
            }
        }

        private void btnLoadExample_Click(object sender, EventArgs e)
        {
            controlPoints.Clear();
            switch (cmbExamples.SelectedIndex)
            {
                case 0:
                    controlPoints.Add(new PointF(120, 300));
                    controlPoints.Add(new PointF(220, 100));
                    controlPoints.Add(new PointF(420, 100));
                    controlPoints.Add(new PointF(520, 300));
                    break;
                case 1:
                    controlPoints.Add(new PointF(100, 300));
                    controlPoints.Add(new PointF(200, 100));
                    controlPoints.Add(new PointF(300, 300));
                    controlPoints.Add(new PointF(400, 100));
                    controlPoints.Add(new PointF(500, 300));
                    break;
                case 2:
                    controlPoints.Add(new PointF(150, 320));
                    controlPoints.Add(new PointF(250, 120));
                    controlPoints.Add(new PointF(450, 120));
                    controlPoints.Add(new PointF(550, 320));
                    break;
            }
            RecalcularCurva();
        }

        private void btnInfo_Click(object sender, EventArgs e)
        {
            // no-op, using txtInfo
        }
    }
}
